{
    "name": "your-vendor-name/plentymarkets-delivery-slip",
    "description": "Plentymarkets plugin for Delivery Slip integration with third-party logistics",
    "type": "library",
    "require": {
        "php": "^8.0",
        "plenty-sdk": "^1.0.0",
        "plentymarkets/plugin-pdf-generator-lib": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Plugins\\DeliverySlip\\": "src/"
        }
    },
    "scripts": {
        "build": [
            "rm -rf dist/*",
            "composer install --no-dev",
            "zip -r dist/Plentymarkets-Delivery-Slip.zip * -x *.git* -x *.idea* -x *.zip -x composer.* -x dist/*"
        ]
    },
    "extra": {
        "plenty": {
            "pluginClasses": {
                "DeliverySlip": "Plugins\\DeliverySlip\\src\\init.php"
            },
            "routes": [
                {
                    "method": "GET",
                    "route": "/delivery-slip",
                    "controller": "DeliverySlip::createDeliverySlip"
                }
            ],
            "events": [
                {
                    "name": "IO.Order.ShippingPackage.Generated",
                    "action": "DeliverySlip::handleDeliverySlipCreation",
                    "priority": 100
                }
            ],
            "pdfGenerators": [
                {
                    "name": "DeliverySlipGenerator",
                    "type": "order",
                    "class": "Plugins\\DeliverySlip\\PdfGenerator\\DeliverySlipGenerator"
                }
            ]
        }
    }
}
